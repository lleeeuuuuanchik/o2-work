{% block footer %}
	<div class="footer__form-top">
		<div class="container">
			<div class="footer__social-wrapper">
				<div class="footer__social-img">{% include "assets/svg/facebook.svg" %}</div>
				<div class="footer__social-img">{% include "assets/svg/vk.svg" %}</div>
				<div class="footer__social-img">{% include "assets/svg/instagram.svg" %}</div>
			</div>
		</div>
	</div>

	<hr class="footer__form-hr">

	<div class="footer__form-bottom">
		<div class="footer__form-bottom-wrapper container">
			<img src="img/logo.png" class="footer__form-bottom-logo" alt="logo">
			<form action="#" class="footer__form-bottom-input-inner">
				<input type="text" class="footer__form-bottom-input" placeholder="Подписаться на рассылку">
				<button type="submit" class="footer__form-bottom-button">
					<div class="footer__form-bottom-button-img">{% include "assets/svg/plane.svg" %}</div>
				</button>
			</form>
			<div class="footer__social-wrapper">
				<div class="footer__social-img">{% include "assets/svg/facebook-gray.svg" %}</div>
				<div class="footer__social-img">{% include "assets/svg/instagram-gray.svg" %}</div>
				<div class="footer__social-img">{% include "assets/svg/twiter-gray.svg" %}</div>
			</div>
		</div>
	</div>

	<footer class="footer__mobile">
		<div class="footer__mobile-wraper container">
			<div class="footer__mobile-inner">
				<p class="footer__mobile-name">Покупателям</p>
				<div class="footer__mobile-img">{% include "assets/svg/arrowDown.svg" %}</div>
			</div>
			<hr class="footer__hr">
